<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp">

        <ImageView
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/slider1"/>

        <ImageView
            android:id="@+id/img_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_16sdp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_125sdp"
        android:background="@drawable/home_background">

        <RelativeLayout
            android:id="@+id/rl_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:padding="@dimen/_8sdp">

            <ImageView
                android:id="@+id/img_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_email"
                android:layout_marginStart="@dimen/_8sdp"/>

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_email"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/primary_text"
                android:text="ravinder.birhman2000@gmail.com"
                android:textSize="@dimen/_12sdp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:padding="@dimen/_8sdp"
            android:layout_below="@+id/rl_email">

            <ImageView
                android:id="@+id/img_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_web"
                android:layout_marginStart="@dimen/_8sdp"/>

            <TextView
                android:id="@+id/txt_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_web"
                android:layout_marginStart="@dimen/_8sdp"
                android:textColor="@color/primary_text"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="www.google.com"
                android:textSize="@dimen/_12sdp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:padding="@dimen/_8sdp"
            android:layout_below="@+id/rl_web">

            <ImageView
                android:id="@+id/img_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_call"
                android:layout_marginStart="@dimen/_8sdp"/>

            <TextView
                android:id="@+id/txt_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_call"
                android:layout_marginStart="@dimen/_8sdp"
                android:textColor="@color/primary_text"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="+917015031854"
                android:textSize="@dimen/_12sdp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_16sdp"
            android:padding="@dimen/_8sdp"
            android:layout_below="@+id/rl_call">

            <ImageView
                android:id="@+id/img_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_address"
                android:layout_marginStart="@dimen/_8sdp"/>

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_address"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:text="Dwarka sec - 45"
                android:textSize="@dimen/_12sdp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="@string/txt_follow_up"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_40sdp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_22sdp"
            android:textStyle="bold"
            android:layout_below="@+id/rl_address"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="6"
            android:orientation="horizontal"
            android:layout_below="@+id/txt_follow"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/img_fb"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/icon_fb"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_8sdp">

                <ImageView
                    android:id="@+id/img_insta"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/icon_insta"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/_12sdp">

                <ImageView
                    android:id="@+id/img_linkedin"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:src="@drawable/icon_linkedin"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/img_you_tube"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/icon_you_tube"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/_8sdp">

                <ImageView
                    android:id="@+id/img_twitter"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_twitter"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_whatsapp"
                    android:layout_width="@dimen/_45sdp"
                    android:scaleType="fitXY"
                    android:layout_height="@dimen/_45sdp"
                    android:src="@drawable/icon_whatsapp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>