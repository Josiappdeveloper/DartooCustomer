<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lineColor"
    tools:context=".activity.CartActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_120sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cart_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroungColor"
                android:layout_marginBottom="@dimen/_8sdp" />

            <RelativeLayout
                android:id="@+id/rl_instruction"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/backgroungColor"
                android:layout_below="@+id/cart_rv"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginBottom="@dimen/_6sdp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="2"
                    android:textSize="@dimen/_10sdp"
                    android:paddingStart="@dimen/_8sdp"
                    android:drawablePadding="@dimen/_12sdp"
                    android:drawableLeft="@drawable/icon_edit"
                    android:hint="Any instructions? Eg: Don't ring the doorbell"
                    android:background="@null"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_105sdp"
                android:layout_below="@+id/rl_instruction"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@color/backgroungColor"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PAYMENT DETAILS"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/primary_text"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_8sdp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item total"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/primary_text"
                        android:layout_marginStart="@dimen/_8sdp"/>

                    <TextView
                        android:id="@+id/txt_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item total"
                        android:textSize="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"
                        android:layout_marginEnd="@dimen/_8sdp"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:background="@color/primary_text" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Partner delivery fee"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/primary_text"
                        android:layout_marginStart="@dimen/_8sdp"/>

                    <TextView
                        android:id="@+id/txt_delivery_fees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item total"
                        android:textSize="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"
                        android:layout_marginEnd="@dimen/_8sdp"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:background="@color/primary_text" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To pay"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"
                        android:layout_marginStart="@dimen/_8sdp"/>

                    <TextView
                        android:id="@+id/txt_final_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item total"
                        android:textSize="@dimen/_10sdp"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/primary_text"
                        android:textStyle="bold"
                        android:layout_marginEnd="@dimen/_8sdp"/>
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:background="@color/backgroungColor"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/ll_location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="0.1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:src="@drawable/icon_location"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.7">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deliver to: Office"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/primary_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16,26/20, Back side road Najafgarh, New Delhi"
                    android:textSize="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/primary_text"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_weight="0.2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_below="@+id/ll_location"
            android:background="@color/primary_text" />

        <LinearLayout
            android:id="@+id/ll_next"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/bg_pay"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$12"
                android:layout_marginStart="@dimen/_4sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/empty_cart_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/empty_cart_img"
        android:visibility="gone" />
</RelativeLayout>