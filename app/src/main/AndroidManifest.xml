<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.birhman.grocery">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".activity.SplashActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:theme="@style/Theme.NoPreviewWindow">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.WelcomeActivity"
            android:theme="@style/AppThemes"/>

        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppThemes"/>

        <activity android:name=".activity.BaseActivity" />

        <activity
            android:name=".activity.ProductActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/AppThemes"/>

        <activity
            android:name=".activity.WebViewActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/AppThemes"/>

        <activity
            android:name=".activity.StoreListActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/AppThemes"/>

        <activity
            android:name=".activity.StoreViewActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/AppThemes"/>

        <activity
            android:name=".activity.LoginRegisterActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateAlwaysHidden"/>

        <activity
            android:name=".activity.AboutUsActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppThemes"/>

        <activity
            android:name=".activity.ContactUsActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppThemes"/>

        <activity
            android:name=".activity.CartActivity"
            android:theme="@style/AppThemes"
            android:configChanges="orientation|screenSize"/>

        <activity
            android:name=".activity.CheckoutActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/AppThemes"/>

        <activity
            android:name=".activity.AnyStoreActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/AppThemes"/>

        <activity android:name=".activity.ProductViewActivity"/>
    </application>

</manifest>